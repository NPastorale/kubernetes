{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
    "docker:pinDigests"
  ],
  "kubernetes": {
    "fileMatch": [
      "apps/.+\\.yaml$"
    ]
  },
  "argocd": {
    "fileMatch": [
      "argocd/.+\\.yaml$"
    ]
  }
}